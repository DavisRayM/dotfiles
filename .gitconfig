[user]
    email = git@davisraym.com
    name = Davis Muro
    signingkey = A0D5986FB401961E
[ui "color"]
    ui = always
[color]
    ui = true
[init]
    defaultBranch = main
[commit]
    gpgsign = true
    verbose = true
[core]
    editor = nvim
    autocrlf = false
    safecrlf = true
    pager = delta
[help]
    autocorrect = prompt
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
[merge]
    conflictStyle = zdiff3
[pull]
    rebase = true
[push]
    autoSetupRemote = true
[alias]
    ignore = !gi() { local IFS=','; curl -sL https://www.toptal.com/developers/gitignore/api/\"$*\"; }; gi
    graph = log --all --graph --decorate --oneline
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
